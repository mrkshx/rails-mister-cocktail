<h1>Cocktails#show</h1>
<p>Find me in app/views/cocktails/show.html.erb</p>


<p><%= @cocktail.name %> is my favourite cocktail!</p>
<h3>These are the ingredients of my cocktail</h3>
<ul>
<% @cocktail.doses.each do |dose|%>
  <li>
    <%= link_to 'Destroy', dose_path(dose), method: :delete, data: { confirm: 'Are you sure?' } %>
    <%= dose.description %> |
    <%= dose.ingredient.name %>
  </li>
<% end %>
</ul>

<%= link_to "Back to cocktail list", cocktails_path %>
<%= link_to "Create new dose", new_cocktail_dose_path(@cocktail)  %>
